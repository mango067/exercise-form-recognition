import cv2
import mediapipe as mp

# Initialize mediapipe pose
mp_drawing = mp.solutions.drawing_utils
mp_pose = mp.solutions.pose

# Define 16 joints
joint_indices = {
    1: mp_pose.PoseLandmark.RIGHT_SHOULDER,
    2: mp_pose.PoseLandmark.LEFT_SHOULDER,
    3: mp_pose.PoseLandmark.RIGHT_ELBOW,
    4: mp_pose.PoseLandmark.LEFT_ELBOW,
    5: mp_pose.PoseLandmark.RIGHT_WRIST,
    6: mp_pose.PoseLandmark.LEFT_WRIST,
    7: mp_pose.PoseLandmark.RIGHT_HIP,
    8: mp_pose.PoseLandmark.LEFT_HIP,
    9: mp_pose.PoseLandmark.RIGHT_KNEE,
    10: mp_pose.PoseLandmark.LEFT_KNEE,
    11: mp_pose.PoseLandmark.RIGHT_ANKLE,
    12: mp_pose.PoseLandmark.LEFT_ANKLE,
    13: mp_pose.PoseLandmark.RIGHT_HEEL,
    14: mp_pose.PoseLandmark.LEFT_HEEL,
    15: mp_pose.PoseLandmark.RIGHT_FOOT_INDEX,
    16: mp_pose.PoseLandmark.LEFT_FOOT_INDEX
}

# Define connections between joints (same as your diagram)
connections = [
    (1, 2), (1, 3), (3, 5), (2, 4), (4, 6),  # arms + shoulders
    (1, 7), (2, 8), (7, 8),                 # torso
    (7, 9), (9, 11), (11, 13), (13, 15),    # right leg
    (8, 10), (10, 12), (12, 14), (14, 16)   # left leg
]

# Setup webcam
cap = cv2.VideoCapture(0)

with mp_pose.Pose(min_detection_confidence=0.5, min_tracking_confidence=0.5) as pose:
    while cap.isOpened():
        ret, frame = cap.read()
        if not ret:
            break

        # Convert image to RGB
        image = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
        image.flags.writeable = False
        results = pose.process(image)

        # Convert back to BGR for display
        image.flags.writeable = True
        image = cv2.cvtColor(image, cv2.COLOR_RGB2BGR)

        h, w, _ = image.shape

        if results.pose_landmarks:
            landmarks = results.pose_landmarks.landmark

            # Store the coordinates for all visible joints
            joint_coords = {}
            for i, lm_enum in joint_indices.items():
                lm = landmarks[lm_enum.value]
                if lm.visibility > 0.5:  # Only if visible
                    x, y = int(lm.x * w), int(lm.y * h)
                    joint_coords[i] = (x, y)
                    cv2.circle(image, (x, y), 6, (0, 0, 255), -1)
                    cv2.putText(image, str(i), (x + 5, y - 5),
                                cv2.FONT_HERSHEY_SIMPLEX, 0.6, (255, 255, 255), 2)

            # Draw the connections
            for (a, b) in connections:
                if a in joint_coords and b in joint_coords:
                    cv2.line(image, joint_coords[a], joint_coords[b], (0, 255, 0), 2)

        # Display window
        cv2.imshow('Pose Detection - 16 Joints + Skeleton', image)

        # Press 'q' to quit
        if cv2.waitKey(10) & 0xFF == ord('q'):
            break

cap.release()
cv2.destroyAllWindows()

